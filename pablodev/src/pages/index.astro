---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import BriefCaseIcon from "../icons/BriefCase.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ProjectsIcon from "../icons/Project.astro";
import Projects from "../components/Projects.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Pablo Monticoli | Portfolio - Full Stack Developer">
  <head>
    <meta property="og:title" content="Pablo Monticoli | Portfolio" />
    <meta
      property="og:description"
      content="Full Stack Developer Portfolio showcasing projects and experience."
    />
    <meta property="og:image" content="/imgpreview.webp" />
    <meta property="og:url" content="https://pablodevportfolio.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
  </main>
  <SectionContainer id="experience">
    <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 text-white dark:text-gray-400"
    >
      <BriefCaseIcon class="size-8" />
      <span aria-label="experienceTitle">Work Experience</span>
    </h2>
    <Experience />
  </SectionContainer>
  <SectionContainer id="projects">
    <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 text-white dark:text-gray-400"
    >
      <ProjectsIcon class="size-8" />
      <span aria-label="projectTitle">Projects</span>
    </h2>
    <Projects />
  </SectionContainer>
</Layout>
